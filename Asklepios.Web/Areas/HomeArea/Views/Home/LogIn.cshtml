@model Asklepios.Web.Areas.HomeArea.Models.LogInViewModel

<h1>@ViewData["Title"]</h1>
<div class="container modal-dialog-centered" style="margin-top:120px;">

    <div class="jumbotron align-items-lg-stretch" style="padding:20px;">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 contact-form">
                <h2>
                    <label>Zaloguj się do modułu pacjenta</label>
                </h2>
                <form class="form" asp-action="LogInPatient" method="post">
                    <input class="email" type="email" required placeholder="Twój adres e-mail" asp-for="User.EmailAddress">
                    <input class="person-detail" required type="password" minlength="8" placeholder="Hasło" asp-for="User.Password">
                    @if (Model?.User?.UserType == Asklepios.Core.Enums.UserType.Patient && Model.LogInFailed)
                    {
                        <div class="messages  flex-column" style="margin-top: 10px; text-align: center ">
                            <p class="alert alert-danger">
                                @Model.LogInFailedAlert
                            </p>
                        </div>
                    }

                    <input class="submit-btn" type="submit" value="Zaloguj">

                </form>
            </div>
        </div>
    </div>
    <div class="jumbotron" style="padding:20px">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 contact-form">
                <h2>
                    <label>Zaloguj się do modułu pracownika</label>
                </h2>
                <form class="form  d-flex flex-column" asp-action="LogInEmployee" method="post">
                    <input class="email" type="email" placeholder="Twój adres e-mail" asp-for="User.EmailAddress">
                    <input class="person-detail" type="password" minlength="8" placeholder="Hasło" asp-for="User.Password">
                    <p>
                        Wybierz moduł:
                        <select asp-for="User.WorkerModuleType" asp-items="Html.GetEnumSelectList<Asklepios.Core.Enums.WorkerModuleType>()"></select>
                    </p>
                    @if (Model?.User?.UserType == Asklepios.Core.Enums.UserType.Employee && Model.LogInFailed)
                    {
                        <div class="messages flex-column" style="margin-top: 10px; text-align: center ">
                            <p class="alert alert-danger">
                                @Model.LogInFailedAlert
                            </p>
                        </div>
                    }

                    <input class="submit-btn flex-column" type="submit" value="Zaloguj">
                </form>
            </div>
        </div>
    </div>
</div>