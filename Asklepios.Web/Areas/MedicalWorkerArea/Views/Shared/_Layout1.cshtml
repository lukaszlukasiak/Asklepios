    <script>
        jQuery(function ($) {
            var last = window.location.href.substr(window.location.href.lastIndexOf("/") + 1);
            var lastIndex = window.location.href.lastIndexOf("/");
            var withoutLast = window.location.href.substr(0, lastIndex);
            var preLastIndex = withoutLast.lastIndexOf("/");
            var preLast = window.location.href.substr(preLastIndex + 1, lastIndex - preLastIndex - 1);

            $(".nav-item").each(function () {

                $(this).removeClass("active");
            })


            $(".nav-link").each(function () {

                if ($(this).attr("data-value") == last || $(this).attr("data-value") == preLast)
                    $(this).parent().addClass("active");
            })
        });

    </script>

