        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.PhoneNumber" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.PhoneNumber</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.BirthDate" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.BirthDate.Value.Date.ToShortDateString()</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.PESEL" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.PESEL</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.PassportNumber" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.PassportNumber</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.PassportCode" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.PassportCode</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.BirthDate" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.BirthDate</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="NFZUnit" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.NFZUnit.Description</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="MedicalPackage" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.MedicalPackage.Name</span>

        </div>
    </div>

