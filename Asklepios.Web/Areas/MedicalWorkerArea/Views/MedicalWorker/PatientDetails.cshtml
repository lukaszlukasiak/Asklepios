        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.Surname" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.Surname</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
            <label asp-for="Person.Gender" class="control-label"></label>
            <span class="flex-grow-1 text-right">@Model.Person.Gender.GetDescription()</span>

        </div>
        <div class="d-flex flex-fill align-content-xl-around form-control border-info alert-info m-2" style="width:400px">
