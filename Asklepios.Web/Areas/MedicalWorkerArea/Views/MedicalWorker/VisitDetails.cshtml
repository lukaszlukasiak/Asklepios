@model Asklepios.Core.Models.Visit

<div class="d-flex jumbotron flex-column" style=" padding:20px;display:flex;align-content:center;position:relative">
    <div class="d-flex mb-3 flex-wrap align-self-top align-items-top">
        <div class="p-2   align-content-center align-items-center align-self-top  mx-auto " style="min-width:400px; text-align:center">
            <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
                <h3 style="font-weight:900;">
                    <a asp-action="MedicalWorkerDetails" asp-controller="MedicalWorker" asp-route-id="@Model.MedicalWorker.Id">

                        @Model.MedicalWorker.FullProffesionalName
                    </a>
                </h3>
                <div class="d-flex align-content-center mr-auto pt-2" style="text-align:center">
                    <img alt="@Model.MedicalWorker.FullProffesionalName" src="@Model.MedicalWorker.Person.ImageSource" class="mx-auto d-block" style="display: block; max-height:50% ; max-width:50%;
        border-radius: 6px; ">
                </div>

            </div>
        </div>
        <div class="p-2   align-content-center align-items-center align-self-top mx-auto " style="min-width:400px; text-align:center">
            <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
                <h3 style="font-weight:900;">
                    <a asp-action="PatientDetails" asp-controller="MedicalWorker" asp-route-id="@Model.Patient.Id">

                        @Model.Patient.Person.FullName
                    </a>
                </h3>
                <div class="d-flex align-content-center mx-auto pt-2" style="text-align:center">
                    <img alt="@Model.Patient.Person.FullName" src="@Model.Patient.Person.ImageSource" class="mx-auto d-block" style="display: block; max-height:50% ; max-width:50%;
        border-radius: 6px; ">
                </div>

            </div>
        </div>


        @*</div>*@
    </div>
    <div class="d-flex flex-column mx-2">
        <h5> Czas i miejsce</h5>

        <div class="border border-secondary rounded w-100 flex-grow-0 mb-2  p-3">
            <div class="p-2 flex-grow-1 pt-3 mx-auto flex-grow-1" style="min-width: 400px;">
                    <p>
                        Data: @Model.GetVisitDateFullDescription()
                    </p>
                    <p>
                        @Model.Location.Name
                    </p>
                    <p>
                        Piętro: @Model.MedicalRoom.FloorNumber, pokój: @Model.MedicalRoom.Name
                    </p>
            </div>
        </div>
    </div>
        <div class="d-flex flex-column mx-2">
            <h5>Usługa</h5>
            <div class="border border-secondary rounded w-100 flex-grow-0 mb-2  p-3">


                <p>
                    Kategoria: @Model.VisitCategory.CategoryName
                </p>
                <p>Koszty</p>
                <p>
                    @Model.PrimaryService.Name : @Model.GetPrice(Model.PrimaryService); PLN
                </p>

                @for (int i = 0; i < Model.MinorMedicalServices?.Count; i++)
                {
                    MedicalService service = Model.MinorMedicalServices[i];
                    if (service != null)
                    {
                        <p>
                            @service.Name : @Model.GetPrice(service); PLN
                        </p>

                    }
                }
                <p>Koszt całkowity: @Model.GetTotalPrice() PLN</p>
            </div>
        </div>
        @if (Model.VisitReview != null)
        {
            <div class="d-flex flex-column mx-2">
                <h5>Recenzja wizyty</h5>
                <div class="border border-secondary rounded w-100 flex-grow-0 mb-2  p-3">

                    <div class="d-flex flex-column flex-fill flex-grow-1 m-auto" style="min-width: 400px;">
                        <div class="d-flex flex-column">
                            <p>
                                Atmosfera:
                                <partial name="_Stars" model="@Model.VisitReview.AtmosphereRate" />
                            </p>
                            <p>
                                Kompetencje:
                                <partial name="_Stars" model="@Model.VisitReview.CompetenceRate" />
                            </p>
                            <p>
                                Ocena ogólna: <partial name="_Stars" model="@Model.VisitReview.GeneralRate" />
                            </p>
                            <p>
                                Opis:
                                @Model.VisitReview.ShortDescription
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.ExaminationReferrals != null)
        {
            <div class="d-flex flex-column mx-2">
                <h5>Wystawione skierowania</h5>
                @for (int i = 0; i < Model.ExaminationReferrals.Count; i++)
                {
                    <div class="border border-secondary rounded w-100 flex-grow-0 mb-2  p-3">
                        @{
                            MedicalReferral referral = Model.ExaminationReferrals[i];

                            <div>
                                Usługa: @referral.PrimaryMedicalService.Name
                            </div>
                            @if (referral.MinorMedicalService != null)
                            {
                                <span>
                                    Podusługa: @referral.MinorMedicalService.Name
                                </span>

                            }

                            <div>
                                Wystawione: @referral.IssueDate.ToString("dd-MM-yyyy")
                            </div>
                            <div>
                                Ważne do: @referral.ExpireDate.ToString("dd-MM-yyyy")
                            </div>
                            if (referral.HasBeenUsed)
                            {<p>
                                    Skierowanie zostało wykorzystane
                                </p>
                            }
                            else if (referral.HasExpired)
                            {
                                <p>Ważność skierowania upłynęła</p>
                            }
                        }

                    </div>

                }
            </div>
        }
        @if (Model.Prescription != null)
        {
            <div class="d-flex flex-column mx-2">
                <h5>Recepta</h5>

                <div class="border border-secondary rounded w-100 flex-grow-0 mb-2  p-3">

                    <div class="d-flex flex-fill pt-2 flex-column">

                        <div>
                            Wystawione: @Model.Prescription.IssueDate.ToString("dd-MM-yyyy")
                        </div>
                        <div>
                            Ważne do: @Model.Prescription.ExpirationDate.ToString("dd-MM-yyyy")
                        </div>
                        <div>
                            Numer id recepty:
                            <span style="font-weight:bold"> @Model.Prescription.IdentificationCode</span>
                        </div>
                        <p>Kod dostępu: <span style="font-weight:bold">  @Model.Prescription.AccessCode</span> </p>
                    </div>
                    <div class="d-flex flex-fill  flex-column">

                        <p>
                            @{
                                for (int i = 0; i < Model.Prescription.IssuedMedicines.Count; i++)
                                {
                                    IssuedMedicine item = Model.Prescription.IssuedMedicines[i];
                                    <partial name="_Medicine" model="item" />
                                    if (i == Model.Prescription.IssuedMedicines.Count - 1)
                                    {

                                    }
                                    else
                                    {
                                        <br />
                                    }
                                }
                            }
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
