@model Asklepios.Core.Models.Notification

<div class="d-flex jumbotron w-80 flex-column" style=" padding:20px;display:flex;align-content:center;position:relative">
    <div class="d-flex mb-3 flex-wrap  align-items-center">
        <div class="p-2   align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
            <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
                @if (Model.IsRead)
                {
                    <h3>@Model.DescriptionOld</h3>
                }
                else
                {
                    <h3>@Model.Description</h3>
                }
                <h3>Dodał(a):</h3>
                <h3 style="font-weight:900;">

                    <a asp-action="MedicalWorkerDetails" asp-controller="Patient" asp-route-id="@Model.Visit.MedicalWorker.Id">
                        @Model.Visit.MedicalWorker.FullProffesionalName
                    </a>
                </h3>
            </div>
        </div>
        <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
            <h5 style="font-weight:900;">
                @Model.Visit.GetVisitDateDescription()
            </h5>
            <br>
            <h5>
                @Model.Visit.Location.Name
            </h5>

            <h5>
                @*<a asp-action="VisitDetails" asp-controller="Patient" asp-route-id="@Model.Visit.Id">*@
                <a>
                    @Model.Visit.VisitCategory.CategoryName - @Model.Visit.PrimaryService.Name
                </a>
            </h5>
            <h5>
                Gabinet nr @Model.Visit.MedicalRoom.Name
            </h5>
        </div>
        <div class="p-2 pt-3 m-auto flex-grow-1" style="width:400px;">
            <div class="d-flex flex-column align-content-end justify-content-evenly m-auto">
                <a asp-area="PatientArea" asp-controller="Patient" asp-action="VisitDetails" asp-route-id="@Model.VisitId" class="btn btn-primary btn-icon-split ">
                    <span class="icon text-white-50 left" style="text-align:left;float:left">
                        <i class="fas fa-book-medical"></i>
                    </span>
                    <span class="text" style="float: left">Szczegóły</span>
                </a>

            </div>
            @if (Model.IsRead==false)
            {
                <div class="d-flex flex-column align-content-end justify-content-evenly mx-auto mt-2">
                    <a asp-area="PatientArea" asp-controller="Patient" asp-action="SetNotificationAsReadList" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-split ">
                        <span class="icon text-white-50 left" style="text-align:left;float:left">
                            <i class="fas fa-book-medical"></i>
                        </span>
                        <span class="text" style="float: left">Oznacz jako przeczytane</span>
                    </a>
                </div>

            }
        </div>
        @*<div class="p-2 pt-3 m-auto flex-grow-1" style="width:400px;">
            <div class="d-flex flex-column align-content-end justify-content-evenly m-auto">
                <a asp-area="PatientArea" asp-controller="Patient" asp-action="BookSpecifiedVisit" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-split ">
                    <span class="icon text-white-50 left" style="text-align:left;float:left">
                        <i class="fas fa-book-medical"></i>
                    </span>
                    <span class="text" style="float: left">Oznacz jako przeczytane</span>
                </a>

            </div>
        </div>*@

    </div>
</div>
