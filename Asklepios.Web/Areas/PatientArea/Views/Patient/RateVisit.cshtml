@model Asklepios.Web.Areas.PatientArea.Models.RateVisitViewModel
@*@{
        @Model= new Asklepios.Web.Areas.PatientArea.Models.RateVisitViewModel();
    }*@
<div class="p-2   align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
    <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
        <h3 style="font-weight:900;">
            @Model.MedicalWorker.FullProffesionalName
        </h3>
        <div class="d-flex align-content-center mr-auto pt-2" style="text-align:center">
            <img alt="@Model.MedicalWorker.FullProffesionalName" src="@Model.MedicalWorker.Person.ImageSource" class="mx-auto d-block" style="display: block; max-height:50% ; max-width:50%;
        border-radius: 6px; ">
        </div>

    </div>
</div>

<form class="form" asp-action="RateVisit" method="post">
    <div class="form-group">
        <label for="AtmosphereRate" class="mt-2 mb-0">Atmosfera</label>
        @Html.DropDownListFor(a => a.AtmosphereRate, new[]
{
    new SelectListItem() {Text = "Bardzo dobra"},
    new SelectListItem() {Text = "Dobra" },
    new SelectListItem() {Text = "Dostateczna" },
    new SelectListItem() {Text = "Mierna" },
    new SelectListItem() {Text = "Niedostateczna" },
    }, "Wybierz ocenę...", new { @class = "form-control" })
        <span asp-validation-for="AtmosphereRate" type="text" class="text-danger"></span>

        <label for="CompetenceRate" class="mt-2 mb-0">Kompetencje</label>
        @Html.DropDownListFor(a => a.CompetenceRate, new[]
{
    new SelectListItem() {Text = "Bardzo dobra"},
    new SelectListItem() {Text = "Dobra" },
    new SelectListItem() {Text = "Dostateczna" },
    new SelectListItem() {Text = "Mierna" },
    new SelectListItem() {Text = "Niedostateczna" },
    }, "Wybierz ocenę...", new { @class = "form-control" })
        <span asp-validation-for="CompetenceRate" type="text" class="text-danger"></span>

        <label for="OverallRate" class="mt-2 mb-0">Ogólna ocena</label>
        @Html.DropDownListFor(a => a.OverallRate, new[]
{
    new SelectListItem() {Text = "Bardzo dobra"},
    new SelectListItem() {Text = "Dobra" },
    new SelectListItem() {Text = "Dostateczna" },
    new SelectListItem() {Text = "Mierna" },
    new SelectListItem() {Text = "Niedostateczna" },
    }, "Wybierz ocenę...", new { @class = "form-control" })
        <span asp-validation-for="OverallRate" type="text" class="text-danger"></span>

        <label for="inputAddress" class="mt-2 mb-0">Wiadomość</label>
        @Html.TextAreaFor(m => m.Description, 5, 1, new { @class = "form-control mb-0" })
        <span asp-validation-for="Description" type="text" class="text-danger "></span>
        <br />
        <textarea asp-for="VisitId" style="visibility:collapse; height:0px">@Model.VisitId</textarea>
        @*@Html.TextAreaFor(m => m.Description,new { @Tex})

            @Html.DisplayNameFor(c => c.VisitId =)
            <input style="visibility:hidden"*@
    </div>
    <button type="submit" class="btn btn-primary w-100">Oceń!</button>
</form>
