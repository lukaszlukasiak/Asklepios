@model Asklepios.Web.Areas.PatientArea.Models.RescheduleVisitSelectNewViewModel
@{ 
    
}
<div class="d-flex jumbotron w-80 flex-column" style=" padding:20px;display:flex;align-content:center;position:relative">
    <div class="d-flex mb-3 flex-wrap  align-items-center">
        <div class="p-2   align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
            <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
                <h3 style="font-weight:900;">
                    <a asp-action="MedicalWorkerDetails" asp-controller="Patient" asp-route-id="@Model.SelectedNewVisit.MedicalWorker.Id">
                        @Model.SelectedNewVisit.MedicalWorker.FullProffesionalName
                        </a>
                </h3>
                <div class="d-flex align-content-center mr-auto pt-2" style="text-align:center">
                    <img alt="@Model.SelectedNewVisit.MedicalWorker.FullProffesionalName" src="@Model.SelectedNewVisit.MedicalWorker.ImagePath" class="mx-auto d-block" style="display: block; max-height:50% ; max-width:50%;
        border-radius: 6px; ">
                </div>
            </div>
        </div>
        <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
            <h5 style="font-weight:900;">
                @Model.SelectedNewVisit.GetVisitDateDescription()
            </h5>
            <br>
            <h5>
                @Model.SelectedNewVisit.Location.Name
            </h5>

            <h5>
                @Model.SelectedNewVisit.VisitCategory.CategoryName - @Model.SelectedNewVisit.PrimaryService.Name
                @if (Model.SelectedNewVisit.PrimaryService.RequireRefferal)
                {
                    <span>
                        <br />
                        *usługa wymaga skierowania
                    </span>
                }
            </h5>
            <h5>
                Gabinet nr @Model.SelectedNewVisit.MedicalRoom.Name
            </h5>
        </div>
        <div class="p-2 pt-3 m-auto flex-grow-1" style="width:400px;">
            <div class="d-flex flex-column align-content-end justify-content-evenly m-auto">
                <form class="form d-flex flex-column" asp-action="RescheduleVisitFinal" method="post">
                    @Html.TextBoxFor(m => m.RescheduledVisitId, new { @class = "form-control mb-2", @style = "visibility:hidden" })

                    <button type="submit" class="btn btn-primary btn-icon-split ">
                        <span class="icon text-white-50 left" style="text-align:left;float:left">
                            <i class="fas fa-address-book"></i>
                        </span>

                        <span class="text" style="float: left">Przełóż</span>
                    </button>
                    @Html.TextBoxFor(m => m.SelectedNewVisitId, new { @class = "form-control mb-2", @style = "visibility:hidden" })
                </form>
            </div>
        </div>
    </div>
</div>
