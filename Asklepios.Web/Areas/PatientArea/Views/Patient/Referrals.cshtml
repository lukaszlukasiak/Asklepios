@model Asklepios.Web.Areas.PatientArea.Models.PatientViewModel
@{
    ViewData["Title"] = "View";
}


@if (Model.Patient.MedicalReferrals?.Count > 0)
{
    <h1 style="text-align:center">Skierowania</h1>

    @*@foreach (var referrals in Model.Patient.MedicalReferrals)
    {

        <partial name="_MedicalReferral" model="referrals" />
    }*@
    List<MedicalReferral> list = Model.GetReferrals();
    for (int i = 0; i < list.Count; i++)
    {
        MedicalReferral referral = list.ElementAt(i);
        <partial name="_MedicalReferral" model="referral" />
    }
}
else
{
    <h1>Brak wystawionych skierowań</h1>

}
