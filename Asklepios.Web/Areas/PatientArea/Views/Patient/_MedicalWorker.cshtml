                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                }
                else if (Model.AverageRating >= 3.25)
                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star-half.svg" class="Star" />

                }
                else if (Model.AverageRating >= 2.75)
                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />

                }
                else if (Model.AverageRating >= 2.25)
                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star-half.svg" class="Star" />

                }
                else if (Model.AverageRating >= 1.75)
                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />

                }
                else if (Model.AverageRating >= 1.25)
                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star-half.svg" class="Star" />
                }
                else if (Model.AverageRating >= 1)
                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />

                }

                @if   (Model.VisitReviews.Count >0)
                {
                    @Model.RatingDescription
                }
            </div>

            <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;">
                <div class="d-flex flex-column align-content-end justify-content-evenly m-auto">
                    <a asp-area="PatientArea" asp-controller="Patient" asp-action="MedicalWorkerDetails" asp-route-id= "@Model.Id" class="btn btn-primary btn-icon-split ">
                        <span class="icon text-white-50 left" style="text-align:left;float:left">
                            <i class="fas fa-address-book"></i>
                        </span>
                        <span class="text" style="float: left">Szczegóły</span>
                    </a>

                    <a asp-area="PatientArea" asp-controller="Patient" asp-action="BookVisit" class="btn btn-primary btn-icon-split mt-3">
                        <span class="icon text-white-50">
                            <i class="fas fa-book"></i>
                        </span>
                        <span class="text">Zarezerwuj wizytę</span>
                    </a>
                    @*style="align-items: flex-start;display:block; padding-left:50px;"
