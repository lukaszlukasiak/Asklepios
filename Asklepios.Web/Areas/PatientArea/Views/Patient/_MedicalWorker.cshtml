@model Asklepios.Core.Models.MedicalWorker
<div class="d-flex jumbotron" style=" padding:20px;display:flex;align-content:center;position:relative">
    @*<div class="d-flex mb-3 flex-wrap align-self-center align-items-center" style="text-align:center">*@
            <div class="p-2  pt-3 align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
                <div class="d-flex flex-fill  justify-content-center" style="text-align:center">
                    <img alt="@Model.FullProffesionalName" src="@Model.ImagePath" class="img-fluid" style="display: block; max-height:300px;
        border-radius: 6px; ">
                </div>
            </div>
            <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
                <h3 style="font-weight:900;">
                    @Model.FullProffesionalName
                </h3>
                <br>

                <h4>Zakres specjalizacji:</h4>
                <h5>
                    @for (int i = 0; i < Model.MedicalServices.Count; i++)
                    {
                        MedicalService service = Model.MedicalServices[i];
                        if (i % 2 == 1)
                        {
                            <br>
                        }
                        @service.Name
                    }

                </h5>
                <partial name="_Stars" model="@Model.AverageRating" />

                @if (Model.VisitReviews.Count > 0)
                {
                    @Model.RatingDescription
                }
            </div>

            <div class="d-flex p-2 pt-3 m-auto flex-grow-1" style="min-width:400px;">
                <div class="d-flex flex-column flex-grow-1">
                    <a asp-area="PatientArea" asp-controller="Patient" asp-action="MedicalWorkerDetails" asp-route-id= "@Model.Id" class="btn btn-primary btn-icon-split ">
                        <span class="icon text-white-50 left" style="text-align:left;float:left">
                            <i class="fas fa-address-book"></i>
                        </span>
                        <span class="text" style="float: left">Szczegóły</span>
                    </a>

                    <a asp-area="PatientArea" asp-controller="Patient" asp-action="BookVisit" class="btn btn-primary btn-icon-split mt-3">
                        <span class="icon text-white-50">
                            <i class="fas fa-book"></i>
                        </span>
                        <span class="text">Zarezerwuj wizytę</span>
                    </a>
                    @*style="align-items: flex-start;display:block; padding-left:50px;"
                    style="text-align:left; align-content:baseline; align-items:flex-start"*@
                </div>
            </div>
        @*</div>*@
</div>