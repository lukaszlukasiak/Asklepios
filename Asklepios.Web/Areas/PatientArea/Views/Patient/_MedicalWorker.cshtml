@model Asklepios.Core.Models.MedicalWorker
<div class="d-flex jumbotron w-80" style=" padding:20px;display:flex;align-content:center;position:relative">
    <div class="d-flex mb-3 flex-wrap align-self-center align-items-center">
            <div class="p-2  pt-3 align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
                <div class="d-flex flex-fill  justify-content-center" style="text-align:center">
                    <img alt="@Model.FullProffesionalName" src="@Model.ImagePath" class="img-fluid" style="display: block; max-height:300px;
        border-radius: 6px; ">
                </div>
            </div>
            <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
