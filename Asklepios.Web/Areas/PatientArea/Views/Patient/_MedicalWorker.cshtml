                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                }
                else if (Model.AverageRating >= 4.25)
                {
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star.svg" class="Star" />
                <img src="\vendor\fontawesome-free\svgs\solid\star-half.svg" class="Star" />

                }
