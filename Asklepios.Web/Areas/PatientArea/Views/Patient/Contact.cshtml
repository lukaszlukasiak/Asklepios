@model Asklepios.Web.Areas.HomeArea.Models.ContactMessageViewModel
    <div class="container modal-dialog-centered">
        <div class="row">
            <div class="container px-5 my-5">
                <form id="contactForm" >
                    <div class="form-floating mb-3">
                        <p>
                            Wybierz temat:

                            @Html.DropDownListFor(a => a.Subject, new[]
                      {
                                new SelectListItem() {Text = "Zgłoszenie błędu"},
                                new SelectListItem() {Text = "Propozycja usprawnień" },
                                },
                                new { @class = "form-select" }
                            )

                        </p>

                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="message" type="text" placeholder="Message" style="height: 10rem;" data-sb-validations="required"></textarea>
                        <label for="message">Message</label>
                        <div class="invalid-feedback" data-sb-feedback="message:required">Message is required.</div>
                    </div>
                    <div class="d-none" id="submitSuccessMessage">
                        <div class="text-center mb-3">
                            <div class="fw-bolder">Form submission successful!</div>
                            <p>To activate this form, sign up at</p>
                            <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                        </div>
                    </div>
                    <div class="d-none" id="submitErrorMessage">
                        <div class="text-center text-danger mb-3">Error sending message!</div>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg disabled" id="submitButton" type="submit">Submit</button>
                    </div>
                </form>
            </div>
            <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
            <div class="contact-caption clearfix">
                <div class="contact-heading text-center">
                    <h2>Formularz kontaktowy</h2>
                </div>
                @*<div class="col-md-5 contact-info text-left">
                <h3>Informacje kontaktowe</h3>
                <div class="info-detail">
                    <ul><li><i class="fa fa-calendar"></i><span>Poniedziałek - Piątek:</span> 8:00 -16:00 </li></ul>
                    <ul><li><i class="fa fa-map-marker"></i><span>Adres:</span> Aleje Jerozolimskie 120, Warszawa, 01-111</li></ul>
                    <ul><li><i class="fa fa-phone"></i><span>Telefon:</span> 25-40-40-12-35</li></ul>
                    <ul><li><i class="fa fa-envelope"></i><span>Email:</span> kontakt@asklepios.com</li></ul>
                </div>
            </div>*@
                <div class="col">
                    @*<h3>Prześlij wiadomość</h3>*@

                    <form class="form" asp-action="Contact" method="post">
                        @*<input class="name" type="text" placeholder="Imie i nazwisko" asp-for="ContactName">
                    <input class="email" type="email" placeholder="Email" asp-for="ContactEMailAddress">*@
                        @*<input class="phone" type="tel" placeholder="Numer telefonu:"  asp-for="PhoneNumber">*@
                        <p>
                            Wybierz temat:

                            @Html.DropDownListFor(a => a.Subject, new[]
                      {
                                new SelectListItem() {Text = "Zgłoszenie błędu"},
                                new SelectListItem() {Text = "Propozycja usprawnień" },
                                }
                            )

                        </p>
                        @*<input class="person-detail" type="text" placeholder="Temat:" asp-for="Subject">*@
                        <textarea class="message" name="message" id="message" cols="30" rows="10" placeholder="Wiadomość" asp-for="Message" data-sb-validations="required"></textarea>

                        <input class="btn btn-primary btn-lg" type="submit" value="Wyślij">
                    </form>
                </div>
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
            window.onload = function () {
                @*alert("@ViewBag.Message");*@
                alert("@Html.Raw(ViewBag.Message)");
            };
                    </script>
                }

            </div>
        </div>
    </div>
