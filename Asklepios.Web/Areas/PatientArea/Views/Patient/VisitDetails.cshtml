@model Asklepios.Core.Models.Visit

<div class="d-flex jumbotron flex-column" style=" padding:20px;display:flex;align-content:center;position:relative">
    <div class="d-flex mb-3 flex-wrap align-self-center align-items-center">
        <div class="p-2   align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
            <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
                <h3 style="font-weight:900;">
                    @Model.MedicalWorker.FullProffesionalName
                </h3>
                <div class="d-flex align-content-center mr-auto pt-2" style="text-align:center">
                    <img alt="@Model.MedicalWorker.FullProffesionalName" src="@Model.MedicalWorker.ImagePath" class="mx-auto d-block" style="display: block; max-height:50% ; max-width:50%;
        border-radius: 6px; ">
                </div>

            </div>
        </div>
        <div class="p-2 flex-grow-1 pt-3 mx-auto flex-grow-1" style="width:400px;text-align:center">
            <h5>
                <p>
                    Data: @Model.GetVisitDateFullDescription()
                </p>
                <br>
                <p>
                    @Model.Location.Name
                </p>
                <p>
                    Piętro: @Model.MedicalRoom.FloorNumber, pokój: @Model.MedicalRoom.Name
                </p>

                @*<h5>
                    @Model.VisitCategory.CategoryName - @Model.BookedMedicalServices[0].Name

                </h5>*@
                @if (Model.IsNotCompletedMedicalTest)
                {
                    <h5>
                        "Badanie  realizacji..."
                    </h5>

                }
            </h5>

            @*<h4>Zakres specjalizacji:</h4>
            <h5>
                @for (int i = 0; i < Model.BookedMedicalServices.Count; i++)
                {
                    MedicalService service = Model.MedicalServices[i];
                    if (i % 2 == 1)
                    {
                        <br>
                    }
                    @service.Name
                }

            </h5>*@

        </div>
        <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
            <h5>

                <p>
                    Kategoria: @Model.VisitCategory.CategoryName
                </p>
                <p>Usługi</p>
                @for (int i = 0; i < Model.BookedMedicalServices.Count; i++)
                {
                    MedicalService service = Model.BookedMedicalServices[i];
                    <p>
                        @service.Name : @Model.GetPrice(service); PLN
                    </p>
                }
                <p>Koszt całkowity: @Model.GetTotalPrice() PLN</p>
            </h5>



        </div>
        <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
            <form class="d-flex flex-column">
                <h5>

                    <p>
                        Recenzja
                    </p>
                    <p>Usługi</p>
                    @for (int i = 0; i < Model.BookedMedicalServices.Count; i++)
                    {
                        MedicalService service = Model.BookedMedicalServices[i];
                        <p>
                            @service.Name : @Model.GetPrice(service); PLN
                        </p>
                    }
                    <p>Koszt całkowity: @Model.GetTotalPrice() PLN</p>
                </h5>

                <a asp-area="PatientArea" asp-controller="Patient" asp-action="BookVisit" class="btn btn-primary btn-icon-split  flex-grow-1 ml-2">
                    <span class="icon text-white-50">
                        <i class="fas fa-book"></i>
                    </span>
                    <span class="text ">Zrecenzuj!</span>
                </a>

            </form>
        </div>


    </div>
