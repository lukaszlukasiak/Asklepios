@model Asklepios.Core.Models.Visit

<div class="d-flex jumbotron flex-column" style=" padding:20px;display:flex;align-content:center;position:relative">
    <div class="d-flex mb-3 flex-wrap align-self-center align-items-center">
        <div class="p-2   align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
            <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
                <h3 style="font-weight:900;">
                    @Model.MedicalWorker.FullProffesionalName
                </h3>
                <div class="d-flex align-content-center mr-auto pt-2" style="text-align:center">
                    <img alt="@Model.MedicalWorker.FullProffesionalName" src="@Model.MedicalWorker.ImagePath" class="mx-auto d-block" style="display: block; max-height:50% ; max-width:50%;
        border-radius: 6px; ">
                </div>

            </div>
        </div>
        <div class="p-2 flex-grow-1 pt-3 mx-auto flex-grow-1" style="width:400px;text-align:center">
            <h5>
                <p>
                    Data: @Model.GetVisitDateFullDescription()
                </p>
                <br>
                <p>
                    @Model.Location.Name
                </p>
                <p>
                    Piętro: @Model.MedicalRoom.FloorNumber, pokój: @Model.MedicalRoom.Name
                </p>
            </h5>
        </div>
        <div class="p-2 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
            <h5>

                <p>
                    Kategoria: @Model.VisitCategory.CategoryName
                </p>
                <p>Usługi</p>
                <p>
                    @Model.PrimaryService.Name : @Model.GetPrice(Model.PrimaryService); PLN
                </p>

                @for (int i = 0; i < Model.MinorMedicalServices.Count; i++)
                {
                    MedicalService service = Model.MinorMedicalServices[i];
                    <p>
                        @service.Name : @Model.GetPrice(service); PLN
                    </p>
                }
                <p>Koszt całkowity: @Model.GetTotalPrice() PLN</p>
            </h5>
        </div>
        @if (Model.VisitReview != null)
        {
            <div class="d-flex flex-column flex-fill flex-grow-1 m-auto" style="width:400px;text-align:center">
                <div class="d-flex flex-column">
                    <p>
                        Atmosfera:
                        <partial name="_Stars" model="@Model.VisitReview.AtmosphereRate" />
                    </p>
                    <p>
                        Kompetencje:
                        <partial name="_Stars" model="@Model.VisitReview.CompetenceRate" />
                    </p>
                    <p>
                        Ocena ogólna: <partial name="_Stars" model="@Model.VisitReview.GeneralRate" />
                    </p>
                    <p>
                        Opis:
                        @Model.VisitReview.ShortDescription
                    </p>
                </div>
            </div>
        }
        else
        {

            @*Asklepios.Web.Areas.PatientArea.Models.RateVisitViewModel lol = new Asklepios.Web.Areas.PatientArea.Models.RateVisitViewModel();
            lol.VisitId = Model.Id;

            <partial name="_RateVisit" model="lol" />*@
        }
        <div class="d-flex flex-grow-1">
            <div class="p-2  pt-3 m-auto flex-grow-0" style="min-width:400px;">
                @*<div class="d-flex flex-row align-content-end justify-content-evenly m-auto">*@
                @*<a asp-area="PatientArea" asp-controller="Patient" asp-action="RateVisit" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-split flex-grow-1 mr-2">
            <span class="icon text-white-50 left" style="text-align:left;float:left">
                <i class="fas fa-address-book"></i>
            </span>
            <span class="text" style="float: left">Oceń wizytę</span>
        </a>*@
                @if (Model.VisitReview == null)
                {
                    <div class="d-flex">
                        <a asp-area="PatientArea" asp-controller="Patient" asp-action="RateVisit" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-split flex-grow-1 m-2">
                            <span class="icon text-white-50 left" style="text-align:left;float:left">
                                <i class="fas fa-address-book"></i>
                            </span>
                            <span class="text" style="float: left">Oceń wizytę</span>
                        </a>
                    </div>
                }
                <div class="d-flex">

                    <a asp-area="PatientArea" asp-controller="Patient" asp-action="BookVisit" class="btn btn-primary btn-icon-split  flex-grow-1 m-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-book"></i>
                        </span>
                        <span class="text">Zarezerwuj ponownie</span>
                    </a>
                    </div>
                </div>
            </div>
    </div>
