@model Asklepios.Core.Models.Location
<div class="jumbotron" style="padding:20px">
    @*<div class="container">*@
    <div class="row">
        <h2 style="text-align:center">@Model.Name</h2>

    </div>
    <div class="row">
        <div class="col-xs-1">

            @*<div class="col justify-content-center">*@
            <img alt="@Model.Name" src="@Model.ImagePath" class="img-responsive rounded" style="display: block; border-radius: 6px; height: 100%; width: fit-content; ">
        </div>
        @*</div>*@
        <div class="class="col-xs-1" style="margin:0px"">
            <h6 style="padding: 0px; overflow-wrap: break-word;max-width:500px">
                @Model.Description
            </h6>
            @*<div class="row" style="margin:0px;padding:0px">

                </div>*@
            <div class="row" style="margin:0px; padding:0px">
                <div class="col-xs-4" style="padding: 0px">
                    <h5>Adres</h5>
                    @Model.City, @Model.PostalCode
                    <br />
                    @Model.StreetAndNumber
                    <br />
                    @Model.VoivodeshipType
                    <br />
                    <h5>Telefon</h5>
                    @Model.PhoneNumber

                </div>
                <div class="col-xs-8" style="margin:0px;padding:0px;">
                    <h5 style="margin-left:10px">Usługi</h5>
                    @{
                        int count = Model.Services.Count();

                        for (int i = 0; i < count; i += 2)
                        {
                            <div class="row" style="margin-left:10px;padding:0px">
                                @{
                                    if (i + 1 < count)
                                    {
                                        <div class="col-xs-2" style="margin:0px;padding:0px">@Model.Services.ElementAt(i)</div>
                                        <div class="col-xs-2" style=" padding: 0px">@Model.Services.ElementAt(i + 1)</div>

                                    }
                                    else
                                    {
                                        <div class="col-xs-2" style="margin:0px;padding:0px">@Model.Services.ElementAt(i)</div>
                                    }
                                }

                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@*</div>*@
