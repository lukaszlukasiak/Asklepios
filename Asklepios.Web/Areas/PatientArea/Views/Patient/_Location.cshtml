@model Asklepios.Core.Models.Location
    <div class="d-flex jumbotron w-100" style="margin: 20px; padding: 20px; ">
        <div class="d-flex flex-column">
            <div class="d-flex justify-content-center center-block mb-2">
                <h2 style="text-align:center;">@Model.Name</h2>
            </div>
            <div class="d-flex flex-row justify-content-around  m-auto flex-wrap ">
                <div class="d-flex flex-fill pt-2" >
                    <img alt="@Model.Name" src="@Model.ImagePath" class="img-fluid w-100" style="display: block;
        border-radius: 6px;  ">
                </div>
                <div class="d-flex flex-column flex-fill w-50 pt-2">
                    <div class="d-flex ml-4">
                        <h4>@Model.Description</h4>
                    </div>
                    <div class="d-flex flex-row mt-4 ml-4">
                        <div class="d-flex  align-self-baseline w-25">
                            <h6 style="font-weight:bold">Adres:</h6>
                        </div>
                        <div class="d-flex flex-column align-self-baseline">
                            <div>
                                @Model.City, @Model.PostalCode
                            </div>
                            <div>
                                @Model.StreetAndNumber
                            </div>
                            <div>
                                @Model.VoivodeshipType
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-row mt-4 ml-4">
                        <div class="d-flex  align-self-baseline w-25">
                            <h6 style="font-weight:bold">Telefon:</h6>
                        </div>
                        <div class="d-flex flex-column align-self-baseline">
                            <div>
                                @Model.PhoneNumber
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-row mt-4 ml-4">
                        <div class="d-flex  align-self-baseline w-25">
                            <h6 style="font-weight:bold">Usługi:</h6>
                        </div>
                        <div class="d-flex flex-row flex-wrap w-75 align-self-baseline">
                            @{
                            int count = Model.Services.Count();

                            for (int i = 0; i < count; i++)
                            {
                            if (i < count - 1)
                            {
                            <div class="d-flex mr-1 mt-0 pt-0 pb-0 mb-0">
                                @{
                                    <p style="padding:0px;margin:0px;">
                                        @Model.Services.ElementAt(i),
                                    </p>


                                }
                            </div>

                            }
                            else
                            {
                            <div class="d-flex mr-1">
                                @{
                                    <p>
                                        @Model.Services.ElementAt(i)
                                    </p>


                                }
                            </div>

                            }
                            }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
