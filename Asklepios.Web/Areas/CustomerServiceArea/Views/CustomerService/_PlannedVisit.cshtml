@model Asklepios.Core.Models.Visit

<div class="d-flex jumbotron w-80 flex-column" style=" padding:20px;display:flex;align-content:center;position:relative">
    <div class="d-flex mb-3 flex-wrap  align-items-center">
        <div class="p-2   align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
            <div class="d-flex flex-fill flex-column justify-content-center" style="text-align:center">
                <h3 style="font-weight:900;">
                    @Model.MedicalWorker.FullProffesionalName
                </h3>
                <div class="d-flex align-content-center mr-auto pt-2" style="text-align:center">
                    <img alt="@Model.MedicalWorker.FullProffesionalName" src="@Model.MedicalWorker.ImagePath" class="mx-auto d-block"  style="display: block; max-height:50% ; max-width:50%;
        border-radius: 6px; ">
                </div>
                
            </div>
        </div>
        <div class="p-2 flex-grow-1 pt-3 m-auto flex-grow-1" style="width:400px;text-align:center">
            <h5 style="font-weight:900;">
                @Model.GetVisitDateDescription()
            </h5>
            <br>
            <h5>
                @Model.Location.Name
            </h5>

            <h5>
                @Model.VisitCategory.CategoryName - @Model.PrimaryService.Name

            </h5>
            @if (Model.IsNotCompletedMedicalTest)
            {
                <h5>
                    "W realizacji..."
                </h5>

            }

            @*<h4>Zakres specjalizacji:</h4>
        <h5>
            @for (int i = 0; i < Model.MedicalServices.Count; i++)
            {
                MedicalService service = Model.MedicalServices[i];
                if (i % 2 == 1)
                {
                    <br>
                }
                @service.Name
            }

        </h5>*@

        </div>

        <div class="p-2 pt-3 m-auto flex-grow-1" style="width:400px;">
            <div class="d-flex flex-column align-content-end justify-content-evenly m-auto">
                <a asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="RescheduleVisit" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-split ">
                    <span class="icon text-white-50 left" style="text-align:left;float:left">
                        <i class="fas fa-address-book"></i>
                    </span>
                    <span class="text" style="float: left">Przełóż wizytę</span>
                </a>
                <a asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="ResignFromVisit" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-split mt-3">
                    <span class="icon text-white-50 left" style="text-align:left;float:left">
                        <i class="fas fa-address-book"></i>
                    </span>
                    <span class="text" style="float: left">Zrezygnuj z wizyty</span>
                </a>
                @*style="align-items: flex-start;display:block; padding-left:50px;"
        style="text-align:left; align-content:baseline; align-items:flex-start"*@
            </div>
        </div>
    </div>
</div>
