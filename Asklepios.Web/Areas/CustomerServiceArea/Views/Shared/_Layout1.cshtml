@model  IBaseViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Asklepios - moduł pacjenta</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/CommonStyles.css?v=123" rel="stylesheet" type="text/css">
</head>

<body id="page-top" style="min-width:375px;">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-book-medical"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Asklepios</div>

            </a>
            <div class="sidebar-heading">
                Moduł Pacjenta
            </div>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="Dashboard" data-value="Dashboard">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Wybierz pacjenta</span>
                </a>
            </li>
            @if (Model.SelectedPatient != null)
            {


                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Kalendarz wizyt
                </div>

                <!-- Nav Item - Pages Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed"
                       aria-expanded="true" aria-controls="collapseTwo" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="BookVisit" data-value="BookVisit">
                        <i class="fas fa-fw fa-book-medical"></i>
                        <span>Umów na wizytę</span>
                    </a>
                </li>

                <!-- Nav Item - Utilities Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link"
                       aria-expanded="true" aria-controls="collapseUtilities" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="PlannedVisits" data-value="PlannedVisits">
                        <i class="fas fa-fw fa-address-card"></i>
                        <span>Zaplanowane wizyty</span>
                    </a>
                </li>



                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Historia
                </div>

                <li class="nav-item">
                    <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="HistoricalVisits" data-value="HistoricalVisits">
                        <i class="fas fa-fw fa-archive"></i>
                        <span>Wizyty</span>
                    </a>
                </li>
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Leczenie
                </div>

                <li class="nav-item">
                    <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="Referrals" data-value="Referrals">
                        <i class="fas fa-fw fa-forward"></i>
                        <span>Skierowania</span>
                    </a>
                </li>

                <!-- Nav Item - Tables -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="Prescriptions" data-value="Prescriptions">
                        <i class="fas fa-fw fa-receipt"></i>
                        <span>Recepty</span>
                    </a>
                </li>
                <!-- Nav Item - Tables -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="TestResults" data-value="TestResults">
                        <i class="fas fa-fw fa-book-reader"></i>
                        <span>Wyniki badań</span>
                    </a>
                </li>
            }
            @*<li class="nav-item">
                    <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="MedicalAdvice">
                        <i class="fas fa-fw fa-table"></i>
                        <span>Zalecenia</span>
                    </a>
                </li>*@
            <hr class="sidebar-divider d-none d-md-block">

            <div class="sidebar-heading">
                Inne
            </div>
            <li class="nav-item">
                <a class="nav-link" asp-controller="CustomerService" asp-action="MedicalWorkersList" data-value="MedicalWorkersList">
                    <i class="fas fa-fw fa-th-list"></i>
                    <span>Lista lekarzy</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="Locations" data-value="Locations">
                    <i class="fas fa-fw fa-building"></i>
                    <span>Lista oddziałów</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="CustomerServiceArea" asp-controller="CustomerService" asp-action="Contact" data-value="Contact">
                    <i class="fas fa-fw fa-mail-bulk"></i>
                    <span>Kontakt</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>


        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    @if (Model.SelectedPatient != null)
                    {
                        <div>Pacjent: @Model.SelectedPatient.Person.FullName</div>
                    }

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline">@Model.UserName</span>
                                <i class="fas fa-user-cog"></i>

                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-action="UserProfile" asp-controller="CustomerService" asp-area="CustomerServiceArea">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profil
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Wyloguj
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <main role="main" class="d-flex flex-column pb-3 align-items-center align-top my-5" style="min-height:900px">
                        <div class="d-flex flex-column w-100 ">
                            @RenderBody()
                        </div>
                    </main>
                </div>
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Asklepios - Łukasz Łukasiak</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Chcesz się wylogować?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Wybierz "Wyloguj" poniżej, jeżeli chcesz sie wylogować z obecnej sesji.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Anuluj</button>
                    <a class="btn btn-primary" asp-action="LogOut" asp-controller="Home" asp-area="HomeArea">Wyloguj się</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    <script>
        jQuery(function ($) {
            var last = window.location.href.substr(window.location.href.lastIndexOf("/") + 1);
            var lastIndex = window.location.href.lastIndexOf("/");
            var withoutLast = window.location.href.substr(0, lastIndex);
            var preLastIndex = withoutLast.lastIndexOf("/");
            var preLast = window.location.href.substr(preLastIndex + 1, lastIndex - preLastIndex - 1);

            $(".nav-item").each(function () {

                $(this).removeClass("active");
            })


            $(".nav-link").each(function () {

                if ($(this).attr("data-value") == last || $(this).attr("data-value") == preLast)
                    $(this).parent().addClass("active");
            })
        });

    </script>

</body>
</html>