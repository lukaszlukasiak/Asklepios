
@model Asklepios.Web.Areas.AdministrativeArea.Models.MedicalWorkerViewModel
@{ 
    MedicalWorker worker = Model.MedicalWorker;
}
<div class="d-flex  flex-column jumbotron w-100 h-auto align-content-between" style=" padding:20px;">
    <div class="d-flex mb-3 flex-wrap  align-items-center">
        <div class="p-2  pt-3 align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
            <div class="d-flex flex-fill  justify-content-center" style="text-align:center">
                <img alt="@worker.FullProffesionalName" src="@worker.Person.ImageSource" class="img-fluid" style="display: block; max-height:300px;
        border-radius: 6px; ">
            </div>
        </div>
        <div class="d-flex  p-2 flex-grow-1 pt-3  align-content-stretch align-items-center" style="width:400px; text-align:center">
            <div class="d-flex flex-column m-auto">
                <h3 style="font-weight:900;">
                    @worker.FullProffesionalName
                </h3>
                <br />
                <h5>Region - @worker.Person.DefaultAglomeration</h5>
                <h5>Edukacja:</h5>
                @*@for (int i = 0; i < worker.Education.Count; i++)
                {*@
                    <p>@worker.Education </p>
                @*}*@
                <h5>Doświadczenie:</h5>
                <div>@worker.Experience</div>
            </div>
        </div>

        <div class="p-2 flex-grow-1 pt-3 mx-auto flex-grow-1 " style="width:400px;text-align:center">
            <h3 style="font-weight:900;"> </h3>
            <h5>Zakres specjalizacji:</h5>
            <h5>
                @for (int i = 0; i < worker.MedicalServices.Count; i++)
                {
                    MedicalService service = worker.MedicalServices[i];
                    //if (i % 2 == 1)
                    //{
                        <br>
                    @*}*@
                    @service.Name
                }

            </h5>
            <partial name="_Stars" model="@worker.AverageRating" />

            @if (worker.VisitReviews.Count > 0)
            {
                @worker.RatingDescription
            }
        </div>
    </div>
    <div  class="d-flex flex-column">
        <h2>Opinie</h2>
        <div class="d-flex flex-column">
            @for (int i = 0; i < worker.VisitReviews.Count; i++)
            {
                VisitReview review = worker.VisitReviews[i];
                if (i % 2 == 0)
                {
            <div class="d-flex mt-2">
                <partial name="_MedicalReview" model="@review" />
            </div>
                    
                }
                else
                {
        <div class="d-flex mt-4">
            <partial name="_MedicalReview" model="@review" />
        </div>
                    
                }


            }
        </div>
    </div>
</div>
