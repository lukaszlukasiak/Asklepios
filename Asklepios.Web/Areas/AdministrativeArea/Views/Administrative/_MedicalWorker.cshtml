@model Asklepios.Core.Models.MedicalWorker
<div class="d-flex jumbotron flex-column" style=" padding:20px;">
    <div class="d-flex mb-3 flex-wrap align-content-around align-items-center" style="text-align:center">
        <div class="p-2  pt-3 align-content-center align-items-center align-self-center mx-auto" style="width:400px; text-align:center">
            <div class="d-flex flex-fill  justify-content-center" style="text-align:center">
                <img alt="@Model.FullProffesionalName" src="@Model.Person.ImageSource" class="img-fluid" style="display: block; max-height:300px;
        border-radius: 6px; ">
            </div>
        </div>
        <div class="p-2 d-flex pt-3 m-auto flex-grow-1 flex-column" style="width:400px;text-align:center">
            <h3 style="font-weight:900;">
                <a asp-action="MedicalWorkerDetails" asp-controller="Administrative" asp-route-id="@Model.Id">

                    @Model.FullProffesionalName
                    </a>
            </h3>
            <br>

            <h4>Zakres specjalizacji:</h4>
            <h5>
                @for (int i = 0; i < Model.MedicalServices.Count; i++)
                {
                    MedicalService service = Model.MedicalServices[i];
                        <br>
                    @service.Name
                }

            </h5>
            <div class="d-flex align-self-center" style="text-align:center" >
                    <partial name="_Stars" model="@Model.AverageRating" />
            </div>

            @if (Model.VisitReviews.Count > 0)
            {
                @Model.RatingDescription
            }
        </div>
    </div>
</div>