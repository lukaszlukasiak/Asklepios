@model Asklepios.Core.Models.Location

<div class="d-flex jumbotron w-100 flex-column" style="padding:20px;align-content:stretch;">
    <div class="d-flex flex-column">
        <div class="d-flex justify-content-center">
            <h2>@Model.Name</h2>
        </div>
        <div class="d-flex flex-column flex-xl-row ">
            <div class="mx-2 flex-column align-content-center align-items-center flex-grow-1" style="text-align: center; max-width: 500px">
                <div class="d-flex flex-fill pt-2 align-content-center align-items-center" style="align-items: center; text-align: center">
                    <img alt="@Model.Name" src="@Model.ImagePath" class="img-fluid ItemImage m-auto" style="display: block; border-radius: 6px; text-align: center; ">
                </div>
            </div>
            <div class="mx-2 flex-grow-5" style="min-width:200px">
                <div class="d-flex flex-column   pt-2">
                    <div class="d-flex flex-column">
                        <div class="d-flex ml-4 text-wrap">
                            <p class="">@Model.Description</p>
                        </div>

                        <div class="d-flex flex-row mt-4 ml-4">
                            <div class="d-flex  align-self-baseline w-25">
                                <h6 style="font-weight:bold">Adres:</h6>
                            </div>
                            <div class="d-flex flex-column align-self-baseline">
                                <div>
                                    @Model.City, @Model.PostalCode
                                </div>
                                <div>
                                    @Model.StreetAndNumber
                                </div>
                                <div>
                                    @Model.Aglomeration.GetDescription()
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-row mt-4 ml-4">
                            <div class="d-flex  align-self-baseline w-25">
                                <h6 style="font-weight:bold">Telefon:</h6>
                            </div>
                            <div class="d-flex flex-column align-self-baseline">
                                <div>
                                    @Model.PhoneNumber
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-row mt-4 ml-4">
                        <div class="d-flex  align-self-baseline w-25">
                            <h6 style="font-weight:bold">Usługi:</h6>
                        </div>
                        <div class="d-flex flex-row flex-wrap w-75 align-self-baseline">
                            @{
                                int count = Model.Services.Count();

                                for (int i = 0; i < count; i++)
                                {
                                    if (i < count - 1)
                                    {
                                        <div class="d-flex mr-1 mt-0 pt-0 pb-0 mb-0">
                                            @{
                                                <span style="padding:0px;margin:0px;">
                                                    @Model.Services.ElementAt(i).Name,
                                                </span>


                                            }
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="d-flex mr-1">
                                            @{
                                                <span>
                                                    @Model.Services.ElementAt(i).Name
                                                </span>


                                            }
                                        </div>

                                    }
                                }
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
